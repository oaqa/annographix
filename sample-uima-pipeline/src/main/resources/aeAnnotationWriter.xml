<?xml version="1.0" encoding="UTF-8"?>
<analysisEngineDescription xmlns="http://uima.apache.org/resourceSpecifier">
  <frameworkImplementation>org.apache.uima.java</frameworkImplementation>
  <primitive>true</primitive>  <annotatorImplementationName>edu.cmu.lti.oaqa.annographix.uima.AnnotationWriter</annotatorImplementationName>
  <analysisEngineMetaData>
    <name>aeAnnotationWriter</name>
    <description/>
    <version>1.0</version>
    <vendor/>
    <configurationParameters>
      <configurationParameter>
        <name>view_name</name>
        <description>The name of view (SOFA) containing annotations.</description>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>false</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>text_field</name>
        <description>name of the text field</description>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>annot_field</name>
        <description>name of the annotation field</description>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>out_text_file</name>
        <description>name of the output text file in Indri TRECTEXT format.</description>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>out_annot_file</name>
        <description>name of the annotation output file (Indri offset annotation file format)</description>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
      <configurationParameter>
        <name>mapping_file</name>
        <description>An annotation mapping file, which defines which annotations and which annotation attributes should be stored. The annotation mapping file also specifies which parent-child links should be memorized.</description>
        <type>String</type>
        <multiValued>false</multiValued>
        <mandatory>true</mandatory>
      </configurationParameter>
    <configurationParameter>
        <name>indri_format</name>
        <description>Indri compatibility flag.</description>
        <type>Boolean</type>
        <multiValued>false</multiValued>
        <mandatory>false</mandatory>
      </configurationParameter>
    </configurationParameters>
    <configurationParameterSettings>
      <nameValuePair>
        <name>view_name</name>
        <value>
          <string>annot</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>text_field</name>
        <value>
          <string>text</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>annot_field</name>
        <value>
          <string>annot</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>out_text_file</name>
        <value>
          <string>output/text.txt.gz</string>
        </value>
      </nameValuePair>
      <nameValuePair>
        <name>out_annot_file</name>
        <value>
          <string>output/annot_offsets.tsv.gz</string>
        </value>
      </nameValuePair>
    <nameValuePair>
        <name>mapping_file</name>
        <value>
          <string>src/main/resources/annotation_map.xml</string>
        </value>
      </nameValuePair>
    <nameValuePair>
        <name>indri_format</name>
        <value>
          <boolean>false</boolean>
        </value>
      </nameValuePair>
    </configurationParameterSettings>
    <typeSystemDescription/>
    <typePriorities/>
    <fsIndexCollection/>
    <capabilities>
      <capability>
        <inputs/>
        <outputs/>
        <languagesSupported/>
      </capability>
    </capabilities>
  <operationalProperties>
      <modifiesCas>true</modifiesCas>
      <multipleDeploymentAllowed>true</multipleDeploymentAllowed>
      <outputsNewCASes>false</outputsNewCASes>
    </operationalProperties>
  </analysisEngineMetaData>
  <resourceManagerConfiguration/>
</analysisEngineDescription>
